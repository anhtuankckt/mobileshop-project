<%- include("../../layout/head.ejs", {title: "MobileShop - AddSlider" }) -%>
<%- include("../../layout/header.ejs") -%>
<%- include("../../layout/sidebar.ejs") -%>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li><a href="/admin/advertises/sliders"><svg class="glyph stroked home">
            <use xlink:href="#stroked-home"></use>
          </svg></a></li>
      <li><span>Quản lý quảng cáo</span></li>
      <li class="active">Thêm ảnh slider</li>
    </ol>
  </div>
  <!--/.row-->

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Thêm ảnh slider</h1>
    </div>
  </div>
  <!--/.row-->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <form role="form" method="post" action="/admin/advertises/sliders/create" enctype="multipart/form-data">
            <div class="col-md-12 col-sm-12">
              <div class="form-group">
                <label>Tên nhóm slider</label>
                <input required name="name" type="text" class="form-control" />
              </div>
              <% if (data && data?.error) { %>
              <div class="text-danger"><span><%=data?.error%></span></div>
              <% } %>
              <div class="form-group">
                <label style="font-size: 2rem;">Yêu cầu ảnh:</label>
                <p>Ảnh được thêm phải có định dạng: <i>jpg, jpeg, png, gif</i>.</p>
                <p>Số lượng ảnh tối đa: <i>8 ảnh</i></p>
              </div>

              <div class="form-group">
                <label>Khuyến nghị kích thước ảnh đẹp nhất:</label>
                <p>Chiều rộng: <i>700px - 750px</i></p>
                <p>Chiều cao: <i>300px - 350px</i></p>
              </div>

              <div class="form-group">
                <input required name="thumbnails" type="file" multiple>
                <br>
                <div>
                  <img style="max-width: 100%;" class="img-fluid" src="img/slide-1.png">
                </div>
                <div style="margin-top: 5px;">(Ảnh minh họa)</div>
              </div>
              <button name="sbm" type="submit" class="btn btn-success">Thêm mới</button>
              <button type="reset" class="btn btn-default">Làm mới</button>
            </div>
          </form>
        </div>
      </div>
    </div><!-- /.col-->
  </div><!-- /.row -->

</div>
<!--/.main-->

<%- include("../../layout/footer.ejs") -%>